{
  "compilerOptions": {
    "target": "es2020",                 
    "lib": ["es2020"],                  
    "skipLibCheck": true,           
    "strict": true,                   
    "forceConsistentCasingInFileNames": true, 

    "module": "commonjs",            
    "moduleResolution": "node",        
    "esModuleInterop": true,           
    "verbatimModuleSyntax": false,     


    "rootDir": "src",                  
    "outDir": "dist",                  
    "baseUrl": ".",                    
    "sourceMap": true,                
    "noImplicitAny": true              
  },
  "include": ["src/**/*"],             
  "exclude": ["node_modules"]          
}